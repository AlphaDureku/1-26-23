<script>
    $("#adsignin").click(function() {
        console.log('whu')
        $.post('headAdmin/authorize', {
            credentials: 'same-origin',
            username: $('input[name="username"]').val(),
            password: $('input[name="password"]').val(),
        }, function(data) {
            console.log(data)
            if (data == 'success') {
                $('#errorDisplay').css({
                    'display': 'none'
                })
                $('#successDisplay').css({
                    'display': 'block'
                })
                setTimeout(() => {
                    $(location).attr('href', 'headAdmin/dashboard');
                }, 1000);


            } else {
                $('#errorDisplay').css({
                    'display': 'block'
                })
            }
        })
    });

    $(document).keyup(function(event) {
        if (event.keyCode === 13) {
            $.post('headAdmin/authorize', {
                credentials: 'same-origin',
                username: $('input[name="username"]').val(),
                password: $('input[name="password"]').val(),
            }, function(data) {
                console.log(data)
                if (data == 'success') {
                    $('#errorDisplay').css({
                        'display': 'none'
                    })
                    $('#successDisplay').css({
                        'display': 'block'
                    })
                    setTimeout(() => {
                        $(location).attr('href', 'headAdmin/dashboard');
                    }, 1000);


                } else {
                    $('#errorDisplay').css({
                        'display': 'block'
                    })
                }
            })


        }
    });
</script>

