<div class="container">
    <div class="row mt-4 d-flex justify-content-center ">
        <div class="tagtitle " style="font-size: 25px; color:rgba(56, 132, 64, 1)" ;>Personal Information </div>
    </div>
    <div class="row mt-5">
        <p style="color: rgba(75, 80, 109, 0.5); font-weight:600 ;">Email:
            <%=result.email%>
        </p>
        <p style="color: rgba(75, 80, 109, 0.5); font-weight:600 ;">Gender:
            <%=result.patient_gender%>
        </p>
    </div>

    <div class="row">
        <form method="POST" action="/Manage-Appointments/update-patient">
            <div class="row">
                <label for="fname" class="col-sm-2 col-form-label" style="color: rgba(75, 80, 109, 1); font-weight: 600;">First Name:</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" style="width: 346px;" name="Fname" value=" <%=result.patient_first_name%>">
                </div>
                <div class="col-sm">
                    <label style="color: rgba(255, 0, 0, 1);font-weight: 500;">Edit</label>
                </div>
            </div>

            <div class="row mt-5">
                <label for="fname" class="col-sm-2 col-form-label" style="color: rgba(75, 80, 109, 1); font-weight: 600;">Middle Name:</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" style="width: 346px;" name="Mname" value=" <%=result.patient_middle_name%>">
                </div>
                <div class="col-sm">
                    <label style="color: rgba(255, 0, 0, 1);font-weight: 500;">Edit</label>
                </div>
            </div>

            <div class="row mt-5">
                <label for="fname" class="col-sm-2 col-form-label" style="color: rgba(75, 80, 109, 1); font-weight: 600;">Last Name:</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" style="width: 346px;" name="Lname" value=" <%=result.patient_last_name%>">
                </div>
                <div class="col-sm">
                    <label style="color: rgba(255, 0, 0, 1);font-weight: 500;">Edit</label>
                </div>
            </div>

            <div class="row mt-5">
                <label for="fname" class="col-sm-2 col-form-label" style="color: rgba(75, 80, 109, 1); font-weight: 600;">Date of Birth: </label>
                <%=result.patient_dateOfBirth%>
                    <div class="col-sm-4">
                        <input type="date" class="form-control" style="width: 346px;" name="birth" value="<%=result.dateOfBirth%>">

                    </div>
                    <div class="col-sm">
                        <label style="color: rgba(255, 0, 0, 1);font-weight: 500;">Edit</label>
                    </div>
            </div>

            <div class="row mt-5">
                <label for="fname" class="col-sm-2 col-form-label" style="color: rgba(75, 80, 109, 1); font-weight: 600;">Address: </label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" style="width: 797px;" name="address" value=" <%=result.patient_address%>">
                </div>
                <div class="col-sm">
                    <label style="color: rgba(255, 0, 0, 1);font-weight: 500;">Edit</label>
                </div>
            </div>

            <div class="row mt-5">
                <label for="fname" class="col-sm-2 col-form-label" style="color: rgba(75, 80, 109, 1); font-weight: 600;">Contact Number: </label>
                <div class="col-sm-4">
                    <input type="tel" class="form-control" style="width: 346px;" name="contact" value=" <%=result.patient_contact_number%>">
                </div>
                <div class="col-sm">
                    <label style="color: rgba(255, 0, 0, 1);font-weight: 500;">Edit</label>
                </div>
            </div>

    </div>
</div>

<div class="container mt-1">
    <div class="row pt-5 pe-5 me-5 d-flex ">
        <button type="reset" class="btn btn-success btn me-3 " style="width: 110px; background-color: #FF0000; border-color: #FF0000;" onclick="history.back()">Cancel</button>
        <button type="submit " class="btn btn-success btn " style="width: 140px;">Save Changes</button>
    </div>
</div>
</form>